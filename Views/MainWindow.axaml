<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BW_Launcher.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BW_Launcher.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        SystemDecorations="None"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        CanResize="True">

    <Window.Styles>
        <Style Selector="Panel.FadeInOnLoad">
            <Style.Animations>
                <Animation Duration="0:0:3"> 
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0.0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1.0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Border CornerRadius="30" BorderThickness="3" Background="#44343434">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#057FD7" Offset="0.0"/>
                <GradientStop Color="#55D555" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <!-- содержимое окна -->
        <Panel>
            <!-- Заголовок -->
            <Panel HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="10,10"> 
                <Border HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Background="#343434"
                    CornerRadius="25"
                    Height="60"
                    Padding="10,10">
                    <Panel>
                        <Panel HorizontalAlignment="Left">
                            <Image Source="avares://BW-Launcher/Assets/BW_Logo.png" Width="100" Height="100" />
                        </Panel>
                        <Panel HorizontalAlignment="Right">
                            <TextBlock Text="B-Launcher" FontSize="36" FontWeight="Bold" Foreground="White"/>
                        </Panel>
                    </Panel>
                </Border>
            </Panel>

            <!-- Элементы управления -->
            <StackPanel HorizontalAlignment="Left"
                VerticalAlignment="Stretch" Margin="10,100"
                Background="Magenta"
                Width="240">
                
                <ComboBox x:Name="VersionsList" SelectedIndex="0">
                    <ComboBoxItem>Text Item 1</ComboBoxItem>
                    <ComboBoxItem>Text Item 2</ComboBoxItem>
                    <ComboBoxItem>Text Item 3</ComboBoxItem>
                    <ComboBoxItem>Text Item 4</ComboBoxItem>
                    <ComboBoxItem>Text Item 5</ComboBoxItem>
                    <ComboBoxItem>Text Item 6</ComboBoxItem>
                    <ComboBoxItem>Text Item 7</ComboBoxItem>
                    <ComboBoxItem>Text Item 8</ComboBoxItem>
                    <ComboBoxItem>Text Item 9</ComboBoxItem>
                </ComboBox>

                <Panel VerticalAlignment="Bottom">
                    <Button Margin="10,10" >
                        <Border>
                        </Border>
                    </Button>
                    <Button>Запустить</Button>
                </Panel>
            </StackPanel>
            <Panel Background="Red" Classes="FadeInOnLoad" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="10,10">
                <TextBlock HorizontalAlignment="Left" Background="#343434" Foreground="White" VerticalAlignment="Bottom">
                    <Run Text="Файлы хранятся в " />
                    <Run Text="{Binding BWorldFolderLocation}"/>
                    </TextBlock>
                <Image HorizontalAlignment="Right" Width="64" Height="64" x:Name="SystemIndicator" Source="{Binding OSLogo}"></Image>
            </Panel>
        </Panel>
    </Border>
</Window>
